@model MantenimientoPY.Models.TipoDelito

@{
    ViewBag.Title = "Tipo delito - Editar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Editar tipo de delito</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>TipoDelito</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idTipoDelito)

        <div class="form-group">
            <p>Nombre del delito: </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombreTipoDelito, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombreTipoDelito, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Descripción del delito: </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.descripcionTipoDelito, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.descripcionTipoDelito, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary btn-lg btn-block" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
