@model IEnumerable<MantenimientoPY.Models.Policia>
    @using GridMvc.Html
@{
    ViewBag.Title = "Policías - Lista";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <h2>Mantenimiento de policías</h2>
<p class="link-agregar">
    @Html.ActionLink("Agregar Id policía", "Create")
</p>

@Html.Grid(Model).Columns(Columns =>
{
    Columns.Add(model => model.identificacionPolicia).Titled("Identificación policía").Filterable(true);
    Columns.Add(model => model.nombrePolicia).Titled("Nombre").Filterable(true);
    Columns.Add(model => model.apellidoPaternoPolicia).Titled("Apellido paterno").Filterable(true);
    Columns.Add(model => model.apellidoMaternoPolicia).Titled("Apellido materno").Filterable(true);
    Columns.Add(model => model.direccionPolicia).Titled("Direccion policía").Filterable(true);
    Columns.Add(model => model.telefonoPolicia).Titled("Telefono policía").Filterable(true);
    Columns.Add(model => model.correoPolicia).Titled("Correo policía").Filterable(true);
    Columns.Add(model => model.estadoPolicia).Titled("Estado policía").Filterable(true);
    Columns.Add().Encoded(false)
  .Sanitized(false)
  .SetWidth(30)
  .RenderValueAs(o => Html.ActionLink("Editar", "Edit", new { id = o.idPolicia }, new { @class = "data-grid-link" }));
    Columns.Add().Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => Html.ActionLink("Detalles", "Details", new { id = o.idPolicia }, new { @class = "data-grid-link" }));
}).WithPaging(10).Sortable(true)

