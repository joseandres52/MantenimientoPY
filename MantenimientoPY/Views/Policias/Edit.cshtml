@model MantenimientoPY.Models.Policia

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Policia</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idPolicia)

        <div class="form-group">
            <p>Tipo de policía: </p>
            <div class="col-md-10">
                @Html.DropDownList("idTipoUsuario", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idTipoUsuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Identificación policiaca: </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.identificacionPolicia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.identificacionPolicia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Nombre: </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombrePolicia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombrePolicia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           <p>Apellido paterno: </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.apellidoPaternoPolicia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.apellidoPaternoPolicia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Apellido materno: </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.apellidoMaternoPolicia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.apellidoMaternoPolicia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Dirección: </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.direccionPolicia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.direccionPolicia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Teléfono: </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.telefonoPolicia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.telefonoPolicia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Correo: </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.correoPolicia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.correoPolicia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="display:none">
            @Html.LabelFor(model => model.passwordPolicia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.passwordPolicia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.passwordPolicia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <p>Estado: </p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.estadoPolicia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.estadoPolicia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
