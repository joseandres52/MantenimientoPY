@model MantenimientoPY.Models.Denuncia

@{
    ViewBag.Title = "Denuncias - detalles";
}

<script type="text/javascript">
    function DisplayGoogleMap() {
        var lat = @ViewBag.latitud;
        var long = @ViewBag.longitud;
        //Set the Latitude and Longitude of the Map
        var myAddress = new google.maps.LatLng(lat, long);

        //Create Options or set different Characteristics of Google Map
        var mapOptions = {
            center: myAddress,
            zoom: 15,
            minZoom: 1,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        };

        //Display the Google map in the div control with the defined Options
        var map = new google.maps.Map(document.getElementById("myDiv"), mapOptions);

        //Set Marker on the Map
        var marker = new google.maps.Marker({
            position: myAddress,
            animation: google.maps.Animation.BOUNCE,
            
        });

        marker.setMap(map);
    }
</script>
<h2>Detalles denuncia</h2>

<div>
    <h4>Denuncia</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Descripción:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcionDenuncia)
        </dd>

        <dt>
            Afectado:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.afectadoDenuncia)
        </dd>

        <dt>
            Nombre del ciudadano denunciante:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ciudadano.nombreCiudadano) @Html.DisplayFor(model => model.Ciudadano.apellidoPatCiudadano) @Html.DisplayFor(model => model.Ciudadano.apellidoMatCiudadano)
        </dd>

        <dt>
            Tipo de denuncia:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TipoDenuncia.nombreDenuncia)
        </dd>

        <dt>
            Tipo de delito:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TipoDelito.nombreTipoDelito)
        </dd>

        <dt>
            Estado de la denuncia:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EstadoDenuncia.descripcionEstadoDenuncia)
        </dd>


    </dl>
    <div id="myDiv" style="width:100%;height:400px;"></div>
   
</div>
<p>
    @Html.ActionLink("Atender", "Edit", new { id = Model.idDenuncia }) |
    @Html.ActionLink("Volver a la lista", "Index")
</p>


<script>
    $(document).ready(function () {
        DisplayGoogleMap();
    });
</script>
