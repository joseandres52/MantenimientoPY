@model IEnumerable<MantenimientoPY.Models.TipoDelito>
@using GridMvc.Html
@{
    ViewBag.Title = "Tipo delito - Lista";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Mantenimiento tipo de delito</h2>
<p class="link-agregar">
    @Html.ActionLink("Agregar Tipo delito", "Create")
</p>

@Html.Grid(Model).Columns(Columns =>
{
    Columns.Add(model => model.nombreTipoDelito).Titled("Tipo delito").Filterable(true);
    Columns.Add(model => model.descripcionTipoDelito).Titled("Descripción tipo de delito").Filterable(true);

    Columns.Add().Encoded(false)
  .Sanitized(false)
  .SetWidth(30)
  .RenderValueAs(o => Html.ActionLink("Editar", "Edit", new { id = o.idTipoDelito}, new { @class = "data-grid-link" }));
    Columns.Add().Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => Html.ActionLink("Detalles", "Details", new { id = o.idTipoDelito}, new { @class = "data-grid-link" }));
}).WithPaging(10).Sortable(true)



