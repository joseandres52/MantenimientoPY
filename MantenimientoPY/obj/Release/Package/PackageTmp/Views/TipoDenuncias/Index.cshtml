@model IEnumerable<MantenimientoPY.Models.TipoDenuncia>
@using GridMvc.Html
@{
    ViewBag.Title = "Tipo de denuncia - Lista";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
    <h2>Mantenimiento tipo de denuncia</h2>
<p class="link-agregar">
    @Html.ActionLink("Agregar Tipo denuncia", "Create")
</p>

@Html.Grid(Model).Columns(Columns =>
{
    Columns.Add(model => model.nombreDenuncia).Titled("Denuncia").Filterable(true);
    Columns.Add(model => model.descripcionDenincua).Titled("Descripción").Filterable(true);

    Columns.Add().Encoded(false)
  .Sanitized(false)
  .SetWidth(30)
  .RenderValueAs(o => Html.ActionLink("Editar", "Edit", new { id = o.idTipoDenuncia }, new { @class = "data-grid-link" }));
    Columns.Add().Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => Html.ActionLink("Detalles", "Details", new { id = o.idTipoDenuncia }, new { @class = "data-grid-link" }));
}).WithPaging(10).Sortable(true)

