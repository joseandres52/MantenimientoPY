@model IEnumerable<MantenimientoPY.Models.TipoUsuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<p>
    @Html.ActionLink("Crear nuevo tipo de usuario policía", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <p>Tipo de usuario</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.descripcionTipoUsuario)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idTipoUsuario }) 
        </td>
    </tr>
}

</table>
