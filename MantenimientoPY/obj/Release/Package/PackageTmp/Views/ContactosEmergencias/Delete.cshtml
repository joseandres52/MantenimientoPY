@model MantenimientoPY.Models.ContactosEmergencia

@{
    ViewBag.Title = "Borrar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Borrar</h2>
<div class="alert alert-warning" role="alert">
    <p>¿Esta seguro de que desea borrar el contacto?</p>
</div>

<div>
    <h4>Contactos de emergencias</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Número de contacto de emergencia: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.numContactoEmergencia)
        </dd>

        <dt>
            Nombre contacto de emergencia: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombreContactoEmergencia)
        </dd>

        <dt>
            Nombre contacto de emergencia: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ciudadano.nombreCiudadano) @Html.DisplayFor(model => model.Ciudadano.apellidoPatCiudadano) @Html.DisplayFor(model => model.Ciudadano.apellidoMatCiudadano)
            <br />
            ID: @Html.DisplayFor(model => model.Ciudadano.idCiudadano)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Borrar" class="btn btn-default" /> |
            @Html.ActionLink("Volver a la lista", "Index")
        </div>
    }
</div>
