@model IEnumerable<MantenimientoPY.Models.ContactosEmergencia>

@{
    ViewBag.Title = "Lista";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<p>
    @Html.ActionLink("Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <p>Número del contacto de emergencia</p>
        </th>
        <th>
            <p>Nombre del contacto de emergencia</p>
        </th>
        <th>
            <p>Nombre del ciudadano</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.numContactoEmergencia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombreContactoEmergencia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ciudadano.nombreCiudadano)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idContactoEmergencia }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idContactoEmergencia }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.idContactoEmergencia })
        </td>
    </tr>
}

</table>
