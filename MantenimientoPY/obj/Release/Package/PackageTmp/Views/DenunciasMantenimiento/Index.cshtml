@model IEnumerable<MantenimientoPY.Models.Denuncia>
@using GridMvc.Html
@{
    ViewBag.Title = "Denuncias - Lista";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
    <h2>Mantenimiento de denuncias</h2>
<p class="link-agregar">
    @Html.ActionLink("Agregar denuncia", "Create")
</p>

@Html.Grid(Model).Columns(Columns =>
{
    Columns.Add(model => model.idDenuncia).Titled("Denuncia").Filterable(true);
    Columns.Add(model => model.idCiudadano).Titled("Id ciudadano").Filterable(true);
    Columns.Add(model => model.Ciudadano.nombreCiudadano).Titled("Nombre").Filterable(true);
    Columns.Add(model => model.Ciudadano.apellidoPatCiudadano).Titled("Apellido paterno").Filterable(true);
    Columns.Add(model => model.Ciudadano.apellidoMatCiudadano).Titled("Apellido materno").Filterable(true);
    Columns.Add(model => model.TipoDenuncia.nombreDenuncia).Titled("Tipo denuncia").Filterable(true);
    Columns.Add(model => model.TipoDelito.nombreTipoDelito).Titled("Tipo delito").Filterable(true);
    Columns.Add(model => model.Policia.idPolicia).Titled("Id policía").Filterable(true);
    Columns.Add().Encoded(false)
  .Sanitized(false)
  .SetWidth(30)
  .RenderValueAs(o => Html.ActionLink("Editar", "Edit", new { id = o.idDenuncia }, new { @class = "data-grid-link" }));
    Columns.Add().Encoded(false)
    .Sanitized(false)
    .SetWidth(30)
    .RenderValueAs(o => Html.ActionLink("Detalles", "Details", new { id = o.idDenuncia }, new { @class = "data-grid-link" }));
}).WithPaging(10).Sortable(true)

