@{
    Layout = "~/Views/Shared/_LayoutSinLogin.cshtml";
    ViewBag.Title = "Login";
}
    <div class="login-style">
        @if (ViewBag.Error != null) { 
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
        }
    <div style="text-align:center">
        <h2>Bienvenido</h2>
        <p>
            Por favor digite su usuario y contraseña.<br />
            Si no posee una contacte a su administrador.
        </p>
        <form class="login-form-1" action="~/home/login" method="post" style="    margin: 0 auto; width: 50%;">
            <!--input-group input-group-lg-->
            <div class="form-group">
                <input type="text" name="correo" class="input-group mb-3" placeholder="Correo" value="" />
            </div>
            <div class="form-group">
                <input type="password" name="password" class="input-group mb-3" placeholder="Contraseña" value="" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary btn-lg btn-block" value="Login" />
            </div>

        </form>
    </div>

    </div>