@model MantenimientoPY.Models.Ciudadano

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Ciudadano</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">

        <p class="control-label col-md-2">Nombre: </p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.nombreCiudadano, new { htmlAttributes = new { @class = "input-group mb-3" } })
            @Html.ValidationMessageFor(model => model.nombreCiudadano, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2">Apellido paterno: </p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.apellidoPatCiudadano, new { htmlAttributes = new { @class = "input-group mb-3" } })
            @Html.ValidationMessageFor(model => model.apellidoPatCiudadano, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2">Apellido materno: </p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.apellidoMatCiudadano, new { htmlAttributes = new { @class = "input-group mb-3" } })
            @Html.ValidationMessageFor(model => model.apellidoMatCiudadano, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2">Dirección: </p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.direccionCiudadano, new { htmlAttributes = new { @class = "input-group mb-3" } })
            @Html.ValidationMessageFor(model => model.direccionCiudadano, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <p class="control-label col-md-2">Correo: </p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.correoCiudadano, new { htmlAttributes = new { @class = "input-group mb-3" } })
            @Html.ValidationMessageFor(model => model.correoCiudadano, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2">Password: </p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.passwordCiudadano, new { htmlAttributes = new { @class = "input-group mb-3" } })
            @Html.ValidationMessageFor(model => model.passwordCiudadano, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2">Estado (0 - Inicial, 1 - Bloqueado): </p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.estadoCiudadano, new { htmlAttributes = new { @class = "input-group mb-3" } })
            @Html.ValidationMessageFor(model => model.estadoCiudadano, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <p class="control-label col-md-2">Número de reportes falsos: </p>
        <div class="col-md-10">
            @Html.EditorFor(model => model.numReportesFalsosCiudadano, new { htmlAttributes = new { @class = "input-group mb-3" } })
            @Html.ValidationMessageFor(model => model.numReportesFalsosCiudadano, "", new { @class = "text-danger" })
        </div>
    </div>

